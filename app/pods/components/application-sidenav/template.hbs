<PaperSidenavContainer @class="inner-sidenav">
  <PaperSidenav
    @class="md-whiteframe-z2"
    @name="left"
    @position="left"
    @open={{leftSideBarOpen}}
    @lockedOpen={{false}}
    @onToggle={{action (mut leftSideBarOpen)}}>
    <PaperToolbar>
      <PaperToolbarTools>{{currentUser.user.formattedName}}</PaperToolbarTools>
      <PaperContent>
        <PaperList>
          <PaperItem @onClick={{action "transitionToClassrooms"}}>
            {{paper-icon "class"}}
            <p>Class</p>
          </PaperItem>
        </PaperList>
        {{#if session.isAuthenticated}}
          <PaperButton @raised={{true}} @onClick={{action invalidateSession}}>
            Logout
          </PaperButton>
        {{/if}}
      </PaperContent>
    </PaperToolbar>
  </PaperSidenav>
</PaperSidenavContainer>
