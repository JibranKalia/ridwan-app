<FullScreenDialog
  @close={{action this.closeModal this.classroom}}
  @save={{action this.saveClassroom this.classroom}}
  @title="Create New Class">

  <PaperInput
    @label="Class Name"
    @autofocus={{true}}
    @value={{this.classroom.name}}
    @onChange={{action (mut this.classroom.name)}}
    @isTouched={{this.classroom.nameErrors.length}}
    @errors={{this.classroom.nameErrors}} />

</FullScreenDialog>