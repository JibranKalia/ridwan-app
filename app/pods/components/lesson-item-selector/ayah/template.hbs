<article class="individual-selector individual-selector--ayah">
  <PowerSelect
    @label="Ayah"
    @placeholder="Ayah"
    @required={{true}}
    @selected={{this.selectedAyah}}
    @options={{this.options}}
    @disabled={{this.disabled}}
    @searchPlaceholder="Search ..."
    @searchEnabled={{true}}
    @onChange={{action "setAyah"}} as |ayah|
  >
    {{ayah}}
  </PowerSelect>
</article>