<article class="individual-selector individual-selector--surah">
  <PowerSelect
    @label="Surah"
    @placeholder="Surah"
    @required={{true}}
    @selected={{this.selectedSurah}}
    @options={{this.options}}
    @searchField="transliteration"
    @searchPlaceholder="Search ..."
    @searchEnabled={{true}}
    @onChange={{action "setSurah"}} as |surah|
  >
    {{surah.transliteration}}
  </PowerSelect>
</article>