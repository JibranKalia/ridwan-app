<article class="selector selector--ayah">
  <HandleEscapeKey>
    <PaperSelect
      @dropdownClass="lesson-select-dropdown"
      @label="Ayah"
      @placeholder="Ayah"
      @required={{true}}
      @selected={{this.selectedAyah}}
      @options={{this.options}}
      @disabled={{this.disabled}}
      @searchPlaceholder="Search for ayah"
      @searchEnabled={{true}}
      @verticalPosition="below"
      @onChange={{action "setAyah"}} as |ayah|
    >
      {{ayah}}
    </PaperSelect>
  </HandleEscapeKey>
</article>