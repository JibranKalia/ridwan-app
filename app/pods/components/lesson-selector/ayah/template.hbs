<article class='selector selector--ayah'>
  <HandleEscapeKey>
    <PaperSelect
      @dropdownClass='lesson-select-dropdown'
      @label="Ayah Number"
      @placeholder="Ayah Number"
      @required={{true}}
      @selected={{selectedAyah}}
      @options={{options}}
      @disabled={{disabled}}
      @searchPlaceholder="Search for ayah.."
      @searchEnabled={{true}}
      @onChange={{action 'setAyah'}} as |ayah|
    >
      {{ayah}}
    </PaperSelect>
  </HandleEscapeKey>
</article>