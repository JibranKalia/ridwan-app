<article class="selector selector--ayah">
  <PowerSelect
    @label="Ayah"
    @placeholder="Ayah"
    @required={{true}}
    @selected={{selectedAyah}}
    @options={{options}}
    @disabled={{disabled}}
    @searchPlaceholder="Search ..."
    @searchEnabled={{true}}
    @onChange={{action "setAyah"}} as |ayah|
  >
    {{ayah}}
  </PowerSelect>
</article>