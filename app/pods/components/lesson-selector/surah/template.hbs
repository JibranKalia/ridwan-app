<article class='surah-selector'>
  <HandleEscapeKey>
    <PaperSelect
      @dropdownClass='lesson-select-dropdown'
      @label="Surah Name"
      @placeholder="Surah Name"
      @required={{true}}
      @selected={{lesson.fromSurah}}
      @options={{constants.SURAHS}}
      @value={{lesson.fromSurah}}
      @searchField="transliteration"
      @searchPlaceholder="Search for a surah.."
      @searchEnabled={{true}}
      @onChange={{action (mut lesson.fromSurah)}} as |surah|
    >
      {{surah.transliteration}}
    </PaperSelect>
  </HandleEscapeKey>
</article>