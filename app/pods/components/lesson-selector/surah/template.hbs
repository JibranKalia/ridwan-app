<article class="selector selector--surah">
  <PowerSelect
    @label="Surah"
    @placeholder="Surah"
    @required={{true}}
    @selected={{selectedSurah}}
    @options={{constants.SURAHS}}
    @searchField="transliteration"
    @searchPlaceholder="Search ..."
    @searchEnabled={{true}} 
    @onChange={{action "setSurah"}} as |surah|
  >
    {{surah.transliteration}}
  </PowerSelect>
</article>