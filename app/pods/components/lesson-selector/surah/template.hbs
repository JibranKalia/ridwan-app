<article class="selector selector--surah">
  <HandleEscapeKey>
    <PaperSelect
      @dropdownClass="lesson-select-dropdown"
      @label="Surah"
      @placeholder="Surah"
      @required={{true}}
      @selected={{this.selectedSurah}}
      @options={{this.constants.SURAHS}}
      @searchField="transliteration"
      @searchPlaceholder="Search for surah"
      @searchEnabled={{true}}
      @onChange={{action "setSurah"}} as |surah|
    >
      {{surah.transliteration}}
    </PaperSelect>
  </HandleEscapeKey>
</article>