{{#if this.individualLesson}}
  <PaperCard as |card|>
    <card.title as |title|>
      <title.text as |text|>
        <text.headline>{{this.individualLesson.name}}</text.headline>
      </title.text>
    </card.title>
  </PaperCard>
{{else}}
  <PaperItem>
    <PaperButton 
      @raised={{true}}
      @primary={{true}}
      @onClick={{action "openCreateModal"}}>
      {{paper-icon "add"}} Create {{this.lessonName}}
    </PaperButton>
  </PaperItem>
{{/if}}

{{#if this.showCreateModal}}
  <Lessons::CreateModal 
    @enrollment={{this.enrollment}}
    @type={{this.type}}
    @lessonName={{this.lessonName}}
    @saveLesson={{action "saveLesson"}}
    @closeModal={{action "closeCreateModal"}}
  />
{{/if}}