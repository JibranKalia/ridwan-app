<PaperCard {{on "click" (action "openModal")}} @class="clickable"  as |card|>
  <card.title as |title|>
    <title.text as |text|>
      <Lessons::Tile::Text
        @text={{text}}
        @currentLesson={{this.currentLesson}}
        @lesson={{this.lesson}}
      />
    </title.text>
  </card.title>
  <card.actions>
    {{#if this.lesson}}
      <PaperButton @onClick={{action "deleteLesson" this.lesson}}>Delete</PaperButton>
      <PaperButton @onClick={{action "openModal"}}>Edit</PaperButton>
    {{else}}
      <PaperButton @onClick={{action "openModal"}}>Create</PaperButton>
    {{/if}}
  </card.actions>
</PaperCard>

{{#if this.showModal}}
  <Lessons::Modal
    @enrollment={{@enrollment}}
    @lessonTypes={{@lessonTypes}}
    @type={{this.type}}
    @lesson={{this.lesson}}
    @saveLessonItem={{action "saveLessonItem"}}
    @closeModal={{action "closeModal"}}
  />
{{/if}}