{{#if individualLesson}}
  <PaperCard as |card|>
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}{{individualLesson.name}}{{/text.headline}}
      {{/title.text}}
    {{/card.title}}
  </PaperCard>
{{else}}
  <PaperItem>
    <PaperButton 
      @raised={{true}}
      @primary={{true}}
      @onClick={{action "createLesson"}}>
      Create {{lessonName}}
    </PaperButton>
  </PaperItem>
{{/if}}