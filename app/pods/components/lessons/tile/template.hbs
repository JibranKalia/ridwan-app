<PaperCard {{on "click" (action "openModal")}} @class="clickable"  as |card|>
  <card.title as |title|>
    <title.text as |text|>
      <Lessons::Tile::Text @text={{text}} @currentLesson={{currentLesson}} @lesson={{lesson}} />
    </title.text>
  </card.title>
  <card.actions>
    {{#if lesson}}
      <PaperButton @onClick={{action "deleteLesson" lesson}}>Delete</PaperButton>
      <PaperButton @onClick={{action "openModal"}}>Edit</PaperButton>
    {{else}}
      <PaperButton @onClick={{action "openModal"}}>Create</PaperButton>
    {{/if}}
  </card.actions>
</PaperCard>

{{#if showModal}}
  <Lessons::Modal 
    @enrollment={{enrollment}}
    @type={{type}}
    @lesson={{lesson}}
    @saveLessonItem={{action "saveLessonItem"}} 
    @closeModal={{action "closeModal"}}
  />
{{/if}}