<FullScreenDialog
  @close={{action this.closeModal this.student}}
  @save={{action this.saveStudent this.student}}
  @title="Add New Student"
>

  <PaperInput
    @label="First Name"
    @autofocus={{true}}
    @value={{this.student.firstName}}
    @onChange={{action (mut this.student.firstName)}}
    @isTouched={{gt this.student.firstNameErrors.length 0}}
    @errors={{this.student.firstNameErrors}}
  />

  <PaperInput
    @label="Last Name"
    @autofocus={{false}}
    @value={{this.student.lastName}}
    @onChange={{action (mut this.student.lastName)}}
    @isTouched={{gt this.student.lastNameErrors.length 0}}
    @errors={{this.student.lastNameErrors}}
  />

</FullScreenDialog>