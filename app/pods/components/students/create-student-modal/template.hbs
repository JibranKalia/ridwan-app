<FullScreenDialog
  @close={{action closeModal student}}
  @save={{action saveStudent student}}
  @title="Add New Student"
>

  <PaperInput
    @label="First Name"
    @autofocus={{true}}
    @value={{student.firstName}}
    @onChange={{action (mut student.firstName)}}
    @isTouched={{gt student.firstNameErrors.length 0}}
    @errors={{student.firstNameErrors}}
  />

  <PaperInput
    @label="Last Name"
    @autofocus={{false}}
    @value={{student.lastName}}
    @onChange={{action (mut student.lastName)}}
    @isTouched={{gt student.lastNameErrors.length 0}}
    @errors={{student.lastNameErrors}}
  />

</FullScreenDialog>