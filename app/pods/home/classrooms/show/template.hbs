{{assert-must-preload this.model.classroom 'enrollments'}}

<ApplicationToolbar @name={{this.model.classroom.name}} @previousRoute="home.classrooms" />

<PaperTabs @selected={{this.selectedRoute}} @stretch={{false}} @borderBottom={{true}} as |tabs|>
  <tabs.tab @value="home.classrooms.show.students" @href={{href-to "home.classrooms.show.students"}}>
    Students
  </tabs.tab>
  <tabs.tab @value="home.classrooms.show.settings" @href={{href-to "home.classrooms.show.settings"}}>
    Settings
  </tabs.tab>
</PaperTabs>

{{outlet}}