{{assert-must-preload this.model.enrollment 'lessons.lesson_items'}}

<article>
  <PaperList>
    <Lessons::Tile
      @lesson={{this.currentLesson}}
      @enrollment={{this.model.enrollment}}
      @lessonTypes={{this.model.lessonTypes}}
      @currentLesson={{true}}
    />

    {{#each this.nonCurrentLessons as |lesson|}}
      <Lessons::Tile
        @lesson={{lesson}}
        @enrollment={{this.model.enrollment}}
      />
    {{/each}}
  </PaperList>
</article>