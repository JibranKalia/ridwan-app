<ApplicationToolbar 
    @name={{model.enrollment.formattedName}}
    @previousRoute="home.classrooms.show" 
    @recordId={{model.enrollment.classroom.id}}/>

<article>
  <PaperList>
    <PaperSubheader>
      Current Lesson
    </PaperSubheader>

    <Lessons::Tile 
      @type="type_one"
      @lessons={{model.lessons}}
      @enrollment={{model.enrollment}}
    />
    <Lessons::Tile 
      @type="type_two"
      @lessons={{model.lessons}}
      @enrollment={{model.enrollment}}
    />
    <Lessons::Tile 
      @type="type_three"
      @lessons={{model.lessons}}
      @enrollment={{model.enrollment}}
    />
  </PaperList>
</article>

{{#if showCreateModal}}
  <Classrooms::CreateLessonModal @saveLesson={{action "saveLesson"}} @closeModal={{action "closeCreateModal"}}/>
{{/if}}