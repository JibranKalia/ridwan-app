<ApplicationToolbar 
    @name={{this.model.enrollment.formattedName}}
    @previousRoute="home.classrooms.show"
    @recordId={{this.model.enrollment.classroom.id}} />

<article>
  <PaperList>
    <PaperSubheader>
      Current Lesson
    </PaperSubheader>

    <Lessons::Tile 
      @type="type_one"
      @lessons={{this.model.lessons}}
      @enrollment={{this.model.enrollment}}
    />
    <Lessons::Tile 
      @type="type_two"
      @lessons={{this.model.lessons}}
      @enrollment={{this.model.enrollment}}
    />
    <Lessons::Tile 
      @type="type_three"
      @lessons={{this.model.lessons}}
      @enrollment={{this.model.enrollment}}
    />
  </PaperList>
</article>