<ApplicationToolbar 
  @name={{this.model.enrollment.studentName}}
  @previousRoute="home.classrooms.show"
  @recordId={{this.model.enrollment.classroom.id}}
/>

<PaperTabs @selected={{this.selectedRoute}} @stretch={{false}} @borderBottom={{true}} as |tabs|>
  <tabs.tab @value="home.enrollments.show.lessons" @href={{href-to "home.enrollments.show.lessons"}}>
    Lessons
  </tabs.tab>
  <tabs.tab @value="home.enrollments.show.messages" @href={{href-to "home.enrollments.show.messages"}}>
    Messages
  </tabs.tab>
  <tabs.tab @value="home.enrollments.show.payments" @href={{href-to "home.enrollments.show.payments"}}>
    Payments
  </tabs.tab>
  <tabs.tab @value="home.enrollments.show.reports" @href={{href-to "home.enrollments.show.reports"}}>
    Reports
  </tabs.tab>
</PaperTabs>

{{outlet}}

