<ApplicationToolbar 
    @name={{model.enrollment.formattedName}}
    @previousRoute="home.classrooms.show" 
    @recordId={{model.enrollment.classroom.id}}/>


<article>
  This section will have lesson info
  <PaperList>
    <PaperSubheader>
      Current Lesson
      Your Students
    </PaperSubheader>
    {{#if typeOneLesson}}
      <PaperCard as |card|>
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}{{typeOneLesson.name}}{{/text.headline}}
          {{/title.text}}
        {{/card.title}}
      </PaperCard>
    {{else}}
      <PaperItem>
        <PaperButton 
          @raised={{true}}
          @primary={{true}}
          @onClick={{action "createLesson" "type_one"}}>
          Create New Lesson
        </PaperButton>
      </PaperItem>
    {{/if}}
    {{#if typeTwoLesson}}
      {{typeTwoLesson.name}}
    {{else}}
      <PaperItem>
        <PaperButton 
          @raised={{true}}
          @primary={{true}}
          @onClick={{action "createLesson" "type_two"}}>
          Create New Revision
        </PaperButton>
      </PaperItem>
    {{/if}}
    {{#if typeThreeLesson}}
      {{typeThreeLesson.name}}
    {{else}}
      <PaperItem>
        <PaperButton 
          @raised={{true}}
          @primary={{true}}
          @onClick={{action "createLesson" "type_three"}}>
          Create Old Revision
        </PaperButton>
      </PaperItem>
    {{/if}}
  </PaperList>
</article>

{{#if showCreateModal}}
  <Classrooms::CreateLessonModal @saveLesson={{action "saveLesson"}} @closeModal={{action "closeCreateModal"}}/>
{{/if}}